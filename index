  <header>
    <div class="wrap">
      <h1>Constituição Nemosínica</h1>
      <div class="sub">Edição oficial pública. O texto publicado neste site corresponde ao arquivo do repositório soberano.</div>
      <div class="meta">
        <span id="last">Atualizando…</span>
        <a href="https://github.com/edersouzamelo/nemosine-constituicao" target="_blank" rel="noopener">Ver repositório</a>
      </div>
    </div>
  </header>

  <main id="content">Carregando a Constituição…</main>

  <footer class="foot">
    <div class="wrap">
      <p>Fonte normativa única: <a href="https://github.com/edersouzamelo/nemosine-constituicao" target="_blank" rel="noopener">repositório no GitHub</a>. 
      <span class="muted">Qualquer divergência fora deste repositório é inválida.</span></p>
      <noscript><p>Ative o JavaScript ou acesse o texto bruto em <a href="./constituicao.md">constituicao.md</a>.</p></noscript>
    </div>
  </footer>

  <!-- Marked.js para converter Markdown -> HTML -->
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script>
    // Caminho do arquivo Markdown dentro do repo (ajuste se renomear)
    const MD_PATH = './constituicao.md'; // se você renomear para index.md, troque aqui para './index.md'

    async function loadMD(){
      const res = await fetch(MD_PATH, {cache: 'no-store'});
      if(!res.ok){ document.getElementById('content').textContent = 'Não foi possível carregar o texto constitucional.'; return; }
      const md = await res.text();
      // Renderiza
      const html = marked.parse(md, {mangle:false, headerIds:true});
      document.getElementById('content').innerHTML = html;
    }

    // Tenta obter data do último commit do arquivo para exibir no cabeçalho (opcional simples)
    async function loadLastUpdated(){
      try{
        const api = 'https://api.github.com/repos/edersouzamelo/nemosine-constituicao/commits?path=constituicao.md&per_page=1';
        const r = await fetch(api, {cache:'no-store'});
        if(!r.ok) throw new Error();
        const [last] = await r.json();
        const d = new Date(last.commit.author.date);
        document.getElementById('last').textContent = 'Última atualização: ' + d.toLocaleDateString('pt-BR');
      }catch(_){
        document.getElementById('last').textContent = '';
      }
    }

    loadMD();
    loadLastUpdated();
  </script>
</body>
